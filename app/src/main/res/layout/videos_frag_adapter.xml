<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:elevation="5dp"


    android:layout_height="130dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/imageVieww"
               />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/titletv"
                    android:text="EMPTINESS FT. JUSTIN TIMBERLAKER"

                    android:textSize="14dp"
                    android:textColor="#000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_weight=".3"
                        android:src="@drawable/timeicon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="18 hours Ago"
                        android:id="@+id/timetv"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:textColor="#C0C0C0"/>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typing industry"
                    android:id="@+id/descptv"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="#C0C0C0"/>


            </LinearLayout>

